<div id="sidebar" class="float_l">
    <div class="sidebar_box">
        <span class="bottom"></span>
        <h3>产品分类</h3>
        <div class="content">
            <ul class="sidebar_list">
                @if (ViewData["ProductTypeList"] != null) 
                {
                    foreach (var ProductTypeList in (List<JY.Model.ProductType>)ViewData["ProductTypeList"]) 
                    {
                        <h6 class="first"><a href='Products.aspx?ProductTypeId=@ProductTypeList.ID'>@ProductTypeList.TypeName</a></h6>
                            foreach (var rptProductType_ItemDataBound in (List<JY.Model.ProductType>)MvcBtc.Controllers.WebTemplateController.rptProductType_ItemDataBound(ProductTypeList.ID.ToString())) 
                            {
                                    <li style=" text-align:left; margin-left:20px"><a href='Products.aspx?ProductTypeId=@rptProductType_ItemDataBound.ID'> @Collections.publicHandle.GetSubstring(rptProductType_ItemDataBound.TypeName, 10, "...")</a></li>
                            }
                        <li class="last"><a href="#"></a></li>
                    }
                }
           
            </ul>
        </div>
    </div>

    <div class="sidebar_box">
        <span class="bottom"></span>
        <h3>热销产品 </h3>
        <div class="content">
            @if (ViewData["ProductList"] != null) 
            {
                foreach (var ProductList in  (List<JY.Model.Product>)ViewData["ProductList"]) 
                {
                      <div class="bs_box">
                        <a href='Productdetail.aspx?id=@ProductList.ID'><img src="Admin/Upfile/@ProductList.ProductPic" alt="Shoes 1" style="width:57px; height:59px;"/></a>
                        <h4><a href='Productdetail.aspx?id=@ProductList.ID'>@Collections.publicHandle.GetSubstring(ProductList.ProductNum.ToString(), 10, "...")</a></h4>
                        <p class="price">本网站价：￥@ProductList.WebsitePrice </p>
                        <div class="cleaner"></div>
                    </div>
                }
               
            }
                   
           
        </div>
    </div>
</div>