@model MvcBtc.Models.LoginModel

@{
    ViewBag.Title = "登录";
}


<div id="templatemo_main">
    @{Html.RenderAction("Left", "WebTemplate");}

    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div id="content" class="float_r">
            <h2 style="text-align:left">登录</h2>
            <div class="content_half float_l checkout">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @style = "width:300px", @ID = "txtMemberName", ErrorMessage = "请输入会员名！" ,ToolTip="请输入会员名！"})
                @Html.ValidationMessageFor(m => m.UserName)
                <br />
                <br />
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new {@TextMode="Password" ,@style="width:300px;" })
                @Html.ValidationMessageFor(m => m.Password)
                <br />
                <br />
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                <br />
                <input type="submit" value="登录" id="btnLogin" class="height=25px,width=75px" />
              
                <a href="javascript:location.href='Registration.aspx'"><img src="images/btn_Registration.jpg" alt="" height="25px" width="75px" style="vertical-align:middle" /></a>
            </div>

        </div>

        <div class="cleaner"></div>
    }
</div> <!-- END of templatemo_main -->






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
